NAME = push_swap

CC = gcc
CFLAGS = -Wall -Werror -Wextra $(KEYS)

INCLUDES=includes
CHECKERS=checkers
PARSERS=parsers
CONVERTERS=converters
NUMBERS=numbers

FT_PRINTF = $(INCLUDES)/ft_printf
LIB_FT_PRINTF_A = $(FT_PRINTF)/libftprintf.a

SRCS = $(NAME).c \
		$(CHECKERS)/arguments.c \
		$(PARSERS)/arguments.c \
		$(CONVERTERS)/convert_to_numbers.c \
		$(NUMBERS)/set_index.c \
		sorters/sort.c \
		operations.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS) $(LIB_FT_PRINTF_A)
	$(CC) $(CFLAGS) $(OBJS) $(LIB_FT_PRINTF_A) -o $(NAME)

clean:
	make clean -C $(FT_PRINTF)
	rm -rf $(OBJS)

fclean: clean
	make fclean -C $(FT_PRINTF)
	rm -rf $(NAME)

$(LIB_FT_PRINTF_A):
	$(MAKE) -C $(FT_PRINTF)

