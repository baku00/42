CLIENT_NAME = client
SERVER_NAME = server
NAMES = $(CLIENT_NAME) $(SERVER_NAME)

INCLUDES = ./includes

FT_PRINTF = $(INCLUDES)/ft_printf
LIB_FT_PRINTF_A = $(FT_PRINTF)/libftprintf.a

CFLAGS = -Wall -Werror -Wextra

all: $(CLIENT_NAME) $(SERVER_NAME)

fclean:
	rm -rf $(NAMES)

$(CLIENT_NAME): $(LIB_FT_PRINTF_A)
	$(CC) $(CFLAGS) $(CLIENT_NAME).c $(LIB_FT_PRINTF_A) -o $(CLIENT_NAME)

$(SERVER_NAME): $(LIB_FT_PRINTF_A)
	$(CC) $(CFLAGS) $(SERVER_NAME).c $(LIB_FT_PRINTF_A) -o $(SERVER_NAME)

$(LIB_FT_PRINTF_A):
	@$(MAKE) -C $(FT_PRINTF)
